{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/Vivarium.csproj"
          ],
          "xml": "**/Vivarium.xml"
        }
      ],
      "dest": "docs/api",
      "includePrivateMembers": false,
      "allowGeneration": true
    }
  ],
  "build": {
    "content": ["**/*.{md|yml}"],
    "resource": ["**/images/**"],
    "dest": "docs/_site",
    "siteBaseUrl": "https://kromtec.github.io/Vivarium",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appTitle": "Vivarium",
      "_appName": "Vivarium",
      "_appFooter": "Copyright Â© 2026",
      "_enableSearch": true
    }
  }
}
